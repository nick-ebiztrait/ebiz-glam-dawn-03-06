<div class="customer-review color-{{ section.settings.section_color_scheme }}">
  <h2 class="customer-review-title">{{ section.settings.title }}</h2>
  <div class="testimonial page-width">
    {% for block in section.blocks %}
      <div class="testimonial-slide">
        <div class="customer-img">
          <img src="{{ block.settings.customer-img | img_url:''}}">
        </div>
        <div class="author-name">
          {{ block.settings['author-name'] }}
        </div>
        <div class="author-detail">
          {{ block.settings['author-detail'] }}
        </div>
        <div class="author-review">
          {{ block.settings['review-text'] }}
        </div>
      </div>
    {% endfor %}
  </div>
</div>
{% javascript %}
    $('.testimonial').slick({
    infinite: true,
      dots:true,
      autoplay:true,
      speed: 800,
      autoplaySpeed: 2000,
    slidesToShow: 1,
    slidesToScroll: 1,
       responsive: [
        {
          breakpoint: 1024,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        },
        {
          breakpoint: 600,
          settings: {
            slidesToShow: 1,
            slidesToScroll: 1
          }
        }
      ]
      
  });

{% endjavascript %}
{% schema %}
{
  "name": "testimonial",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [

 {
          "type": "inline_richtext",
          "id": "title",
          "default": "t:sections.image-with-text.blocks.heading.settings.heading.default",
          "label": "t:sections.image-with-text.blocks.heading.settings.heading.label"
        },
    {
      "type": "color_scheme",
      "id": "section_color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },

    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "testimonial",
      "name": "testimonial",

      "settings": [
        {
      "type": "image_picker",
      "id": "customer-img",
      "label": "customer image"
    },
      {
          "type": "inline_richtext",
          "id": "author-name",

          "label": "author-name"
        },
    {
          "type": "inline_richtext",
          "id": "author-detail",

          "label": "author-detail"
        },
      {
          "type": "inline_richtext",
          "id": "review-text",

          "label": "reviews"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "testimonial",

    }
  ]
}
{% endschema %}



